{% extends 'base.html.twig' %}

{% block title %}Jirama | Ajout utilisateur{% endblock %}

{% block menuactive %}user{% endblock %}

{% block body %}

<div class="py-4 px-3 px-md-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-md-4">
                <div class="row">
                    <div class="col-md-6 card-header ml-3 pb-0 mb-0">
                        <!-- Breadcrumb -->
                        <nav class="d-none d-md-block" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('list_user') }}">Utilisateur</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Ajout</li>
                            </ol>
                        </nav>
                        <!-- End Breadcrumb -->

                        <div class="mb-md-2 d-flex justify-content-between">
                            <h1 class="h3 mb-0">Nouveau utilisateur</h1>
                        </div>
                    </div>
                </div>

            <div class="">
                <div class="row">
                    <div class="card-body tab-content p-2">
                        <form method="post" action="{{ path('insert_zone') }}">
                            <div class="modal-body">
                                <div class="col-md-12">
                                    <div class="form-row">
                                        <div class="form-group col-12 col-md-6">
                                            <label for="nom">Nom</label>
                                            <input type="email" value="" class="form-control" id="nom" name="nom">
                                        </div>
                                        <div class="form-group col-12 col-md-6">
                                            <label for="prenom">Prénom</label>
                                            <input type="text" value="" class="form-control" id="prenom" name="prenom">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-12 col-md-6">
                                            <label for="reference">Role</label>
                                            <select class="custom-select" id="role" name="role">
                                                <option value="3">Administrateur</option>
                                                <option value="2" selected>Officier</option>
                                                <option value="1">Consultant</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-12 col-md-6">
                                            <label for="position">Position</label>
                                            <input type="text" value="" class="form-control" id="position" name="position">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-12 col-md-12">
                                            <label for="email">Email</label>
                                            <input type="email" value="" class="form-control" id="email" name="email">
                                        </div>
                                    </div>
                                    <div class="custom-control custom-switch mb-2">
                                        <input type="checkbox" class="custom-control-input" id="randomPassword" checked>
                                        <label class="custom-control-label" for="randomPassword">Pièce jointe</label>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>                       
</div>
{% endblock %}