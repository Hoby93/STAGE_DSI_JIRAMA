{% extends 'base.html.twig' %}

{% block title %}Jirama | Liste utilisateur{% endblock %}

{% block menuactive %}user{% endblock %}

{% block body %}

<div class="py-4 px-3 px-md-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-md-4">
                <div class="row">
                    <div class="col-md-6 card-header ml-3 pb-0 mb-0">
                        <!-- Breadcrumb -->
                        <nav class="d-none d-md-block" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a>Utilisateur</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Liste</li>
                            </ol>
                        </nav>
                        <!-- End Breadcrumb -->

                        <div class="mb-md-2 d-flex justify-content-between">
                            <h1 class="h3 mb-0">List des utilisateurs</h1>
                        </div>
                        {# <div class="mb-3 text-muted">
                            <h5>Consultez la Liste des Types de finition Disponibles pour la Construction Immobilière.</h5>
                        </div> #}
                        
                    </div>
                </div>

                {# {% if message %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endif %} #}

            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-md-12 table-xl">
                        <div class="toolbar row mb-3 mt-4">
                            <div class="col">
                                <a class="btn btn-light" style="width: 150px;" data-toggle="collapse" href="#recherche-employe" aria-expanded="false" aria-controls="form-elements">
                                    <span class="menu-title">Filtre</span>
                                    <sub><i class="gd-filter ml-1"></i></sub>
                                </a>
                                <div class="spinner-border spinner-border-sm text-info ml-4 d-none" role="status" id="zone-table-spinner">
                                    <span class="sr-only">Loading...</span>
                                </div>
                            </div>
                            <div class="col ml-auto">
                                <div class="dropdown float-right">
                                    <a class="btn btn-primary float-right ml-3 pointer" data-toggle="modal" data-target="#addUser"><i class="gd-plus text-white mr-1"></i></a>
                                    <button class="btn btn-secondary mr-3" type="button" id="actionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Action <i class="gd-angle-down icon-text icon-text-xs align-middle ml-3"></i></button>
                                    <div class="dropdown-menu" aria-labelledby="actionMenuButton">
                                        <a class="dropdown-item" href="#">Modifier</a>
                                        <a class="dropdown-item" href="#" onclick="show_confirmation_popup()">Supprimer</a>
                                        <a class="dropdown-item pointer" data-toggle="modal" data-target="#addCoupure">Coupure</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="collapse mt-2" id="recherche-employe">
                                    <div class="row">
                                        <div class="col-md-4 with-border-text">
                                            <label class="border-text-label">Recherche</label>
                                            <input type="text" id="mot-clee" placeholder="" class="form-control">
                                        </div>
                                        <div class="col-md-4 with-border-text">
                                            <button type="button" class="btn btn-soft-light" onclick="search()">
                                                <i class="gd-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5" id="list-stock">
                            <table class="table table-bordered scroll-x-perfect text-nowrap mb-0">
                                <thead>
                                <tr>
                                    <th class="font-weight-semi-bold border-top-0 py-2">
                                        #
                                    </th>
                                    <th class="font-weight-semi-bold border-top-0 py-2">
                                        Position
                                    </th>
                                    <th class="font-weight-semi-bold border-top-0 py-2">
                                        Email
                                    </th>
                                    <th class="font-weight-semi-bold border-top-0 py-2">
                                        Role
                                    </th>
                                    <th class="font-weight-semi-bold border-top-0 py-2"></th>
                                </tr>
                                </thead>
                                <tbody id="table-user-body">
                                
                                </tbody>
                            </table>
                        </div>
                        <div class="mb-0 text-center" id="no-result">
                            <div class="card-body text-muted"> Aucun élément</div>
                        </div>
                        <div class="col-md-12">
                            <nav aria-label="Table Paging" class="mb-0 mt-4 text-muted" id="pagination">
                                <div class="row">
                                    <div class="col-md-6 text-muted">Page <span id="curr-page">1</span> sur <span id="count-page">1</span></div>
                                    <div class="col-md-6">
                                        <ul class="pagination justify-content-end mb-0">
                                            <!-- Pagination items will be dynamically inserted here -->
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                            
</div>
{% endblock %}

{% block modals %}
{{ parent() }}

<!-- Profil - Modal -->
<div id="addUser" class="modal fade" role="dialog" aria-labelledby="addUser" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Insertion Utilisateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <label for="nom">Nom</label>
                            <input type="text" value="" class="form-control" id="nom" name="nom">
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <label for="prenom">Prénom</label>
                            <input type="text" value="" class="form-control" id="prenom" name="prenom">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <label for="reference">Role</label>
                            <select class="custom-select" id="role" name="role">
                                <option value="3">Administrateur</option>
                                <option value="2" selected>Officier</option>
                                <option value="1">Consultant</option>
                            </select>
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <label for="position">Position</label>
                            <input type="text" value="" class="form-control" id="position" name="position">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-12">
                            <label for="email">Email</label>
                            <input type="email" value="" class="form-control" id="email" name="email">
                        </div>
                    </div>
                    {# <div class="custom-control custom-switch mb-2">
                        <input type="checkbox" class="custom-control-input" id="randomPassword" checked>
                        <label class="custom-control-label" for="randomPassword">Pièce jointe</label>
                    </div> #}
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" id="btn-add-user" class="btn btn-primary" onclick="add_user()" style="width: 100px;">Confirmer</button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal -->

{% endblock %}


{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/pagination.js') }}"></script>

<script>
    var page = 1;  // Page actuelle
    var count = 1; // Nombre total de pages

    function updateTableContent(users) {
        // Obtenir l'élément tbody du tableau
        let tbody = document.getElementById('table-user-body');
        tbody.innerHTML = "";

        function createRow(user) {
            var tr = document.createElement('tr');
            tr.className = "text-left";
            tr.innerHTML = `
                <td class="py-3">
                    <div class="d-flex align-items-center">
                        <div class="position-relative mr-2">
                            <span class="badge badge-sm bg-soft-primary position-relative text-secondary">
                                ${user.nom.charAt(0).toUpperCase()}
                            </span>
                        </div>
                        ${user.nom} ${user.prenom}
                    </div>
                </td>
                <td class="py-3">${user.position}</td>
                <td class="py-3">${user.email}</td>
                <td class="py-3">
                    <span class="badge badge-primary">${user.profil}</span>
                </td>
                <td class="py-3 text-center">
                    <div class="position-relative">
                        <a class="link-dark d-inline-block" href="#">
                            <i class="gd-pencil icon-text"></i>
                        </a>
                        <a class="link-dark d-inline-block" href="#">
                            <i class="gd-trash icon-text"></i>
                        </a>
                    </div>
                </td>
            `;
            return tr;
        }

        if(users.length == 0) {
            document.getElementById('no-result').classList.remove('d-none');
        } 
        else {
            document.getElementById('no-result').classList.add('d-none');
            users.forEach(function(user) {
                var tr = createRow(user);
                tbody.appendChild(tr);
            });
        }
    }

    function on_process(btnId, btnText, process) {
        let btn = document.getElementById(btnId);
        if(process) {
            btn.innerHTML = `
                <div id="spinner" class="spinner-border spinner-border-sm text-white" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            `;
        } else {
            btn.innerHTML = btnText;
        }
    }

    function search() {
        var data = {
            page: page,
            limit: getPreferenceLimitPerPage(),
            motclee: document.getElementById('mot-clee').value
        };
        fetchUser(data);
    }

    function fetchUser(data) {
        $.ajax({
            url: "{{ path('search_user_on_liste') }}",
            method: 'POST',
            contentType: 'application/json',  // Ajout du type de contenu JSON
            data: JSON.stringify(data),  // Conversion en JSON
            beforeSend: function() {
                document.getElementById('zone-table-spinner').classList.remove('d-none');
            },
            success: function(response) {

                // Convertissez la chaîne JSON en objet JavaScript
                let data = JSON.parse(response);

                var users_loaded = data.employes;
                console.log(users_loaded);

                count = users_loaded.totalPages;

                // Parcourir les résultats et remplir le tableau
                updateTableContent(users_loaded.results);

                // Generer la pagination
                generatePagination(page, count);
                updatePaginationIndication(page, count);

                document.getElementById('zone-table-spinner').classList.add('d-none');
            },
            error: function() {
                // Masquer le spinner en cas d'erreur de la requête AJAX
                document.getElementById('zone-table-spinner').classList.add('d-none');
            }
        });
        //document.getElementById('zone-table-spinner').style.display = "none";
    }

    function loadDataOfPage() {
        search();
    }

    async function add_user() {
        var data = {
            nom: document.getElementById('nom').value,
            prenom: document.getElementById('prenom').value,
            role: document.getElementById('role').value,
            position: document.getElementById('position').value,
            email: document.getElementById('email').value
        };
        $.ajax({
            url: "{{ path('insert_user') }}",
            method: 'POST',
            contentType: 'application/json',  // Ajout du type de contenu JSON
            data: JSON.stringify(data),  // Conversion en JSON
            beforeSend: function() {
                on_process('btn-add-user', 'Ajouter', true);
            },
            success: function(response) {
                let data = JSON.parse(response);
                console.log(data);
                on_process('btn-add-user', 'Ajouter', false);
            },
            error: function() {
                on_process('btn-add-user', 'Ajouter', false);
                // Masquer le spinner en cas d'erreur de la requête AJAX
            }
        });
        //document.getElementById('loading-on-map').style.display = "none";
    }

    search();
</script>
{% endblock %}
